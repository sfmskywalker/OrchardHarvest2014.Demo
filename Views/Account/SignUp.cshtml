@model OrchardHarvest2014.WorkflowsJobsDemo.ViewModels.SignUpViewModel
@Html.ValidationSummary()
@using (Html.BeginFormAntiForgeryPost()) {
    <fieldset>
        <legend>@T("Register")</legend>
        <div class="form-group">
            @Html.LabelFor(m => m.FirstName, T("First Name"))
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.LastName, T("Last Name"))
            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.EmailAddress, T("Email Address"))
            @Html.TextBoxFor(m => m.EmailAddress, new {@class = "form-control"})
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, T("Password"))
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.RepeatPassword, T("Repeat Password"))
            @Html.PasswordFor(m => m.RepeatPassword, new { @class = "form-control" })
        </div>
    </fieldset>
    <button type="submit">@T("Register")</button>
}